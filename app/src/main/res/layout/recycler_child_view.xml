<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childHeadView"
    android:layout_marginBottom="@dimen/DP_8"
    android:layout_marginTop="@dimen/DP_8"
    android:background="@color/colorAccent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grp"
        card_view:cardCornerRadius="@dimen/DP_4"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/DP_16"
        android:layout_marginRight="@dimen/DP_16"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/overall_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_140"
            android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP_38"
                android:layout_marginLeft="@dimen/DP_16"
                android:layout_marginTop="@dimen/DP_12"
                android:layout_marginRight="@dimen/DP_16"
                android:layout_marginBottom="@dimen/DP_4"
                android:maxLines="2"
                android:text="@string/title_text"
                android:textColor="@color/textColor"
                android:textSize="@dimen/SP_16"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_34"
            android:text="@string/subtitle_text"
            android:textColor="@color/textColor"
            android:textSize="@dimen/SP_14"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/DP_16"
            android:layout_marginRight="@dimen/DP_16"
            android:layout_marginBottom="@dimen/DP_8"/>

        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_14"
            android:textSize="@dimen/SP_12"
            android:textColor="@color/timeTextColor"
            android:text="@string/time_text_val"
            android:layout_marginLeft="@dimen/DP_16"
            android:layout_marginRight="@dimen/DP_16"
            android:layout_marginBottom="@dimen/DP_12"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>